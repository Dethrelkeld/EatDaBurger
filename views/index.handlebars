<div class="container">
  <div class="row mx-auto mt-4 mb-4">
    
      <h1 class="display-1 rough text-center">Eat Da Burgahs!</h1>

  </div>
  <div class="row mt-4">
    <div class="col-4">
      <h3 class="rough">Available Burgahs</h3>

      <ul class="cursive">
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          {{this.burger_name}}
          <div>
            <button type="submit" class='burgerDevour cursive btn btn-dark' value="{{this.id}}"> Devour Me!</button>

          </div>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-4">

    </div>

    <div class="col-4">
      <h3 class="rough">Devoured Burgahs</h3>

      <ul class="cursive">
        {{#each burgers}}
        {{#if devoured}}
        <li>
          {{this.burger_name}}
        </li>
        {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>
  <div class="row">
    <div class="col-4"></div>
    <div class="col-4">
      <div class="col-4">
        <h3 class="rough">Create a Burger</h3>
        <form id="create-form">

          <div class="form-group">
            <label for="burger-input" class="cursive">Name Your Burger:</label>
            <input type="text" id="burger-input" name="name">
          </div>
          <button id="submitBtn" type="submit" class="cursive btn btn-dark">Add It!</button>
        </form>
      </div>

    </div>
    <div class="col-4"></div>
  </div>
</div>