<h1>Eat Da Burgers!</h1>

<h2>Burgers that are not devoured!</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <li>
  {{this.burger_name}}
  
  </li>
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been devoured!</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
<li>
 {{this.burger_name}}
  </li>
  {{/if}}
  {{/each}}
</ul>

<h2>Create a burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="burger-input">burger Name:</label>
    <input type="text" id="burger-input" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">devoured?</label><br>
    <input type="radio" name="devoured" value="1" id="devoured" checked> devoured!<br>
    <input type="radio" name="devoured" value="0" id="available"> Available
  </div>

  <button id="submitBtn" type="submit">Add burger</button>
</form>