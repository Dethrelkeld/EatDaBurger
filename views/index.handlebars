<div class="container">
  <div class="row">


    <h1  class="display-1 rough">Eat Da Burgahs!</h1>
  </div>
  <div class="row">
    <div class="col-4">



      <h3 class="rough">Available Burgahs</h3>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li >
          {{this.burger_name}}
          <div>
            <button type="submit" class='burgerDevour' value="{{this.id}}"> Devour Me!</button>

          </div>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-4">

    </div>

    <div class="col-4">
      <h3 class="rough">Devoured Burgahs</h3>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          {{this.burger_name}}
        </li>
        {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>
  <div class="row">
    <div class="col-4"></div>
    <div class="col-4">
      <div class="col-4">
        <h3 class="rough">Create a Burger</h3>
        <form id="create-form">

          <div class="form-group">
            <label for="burger-input">Name Your Burger:</label>
            <input type="text" id="burger-input" name="name">
          </div>
          <button id="submitBtn" type="submit">Add It!</button>
        </form>
      </div>

    </div>
    <div class="col-4"></div>
  </div>
</div>